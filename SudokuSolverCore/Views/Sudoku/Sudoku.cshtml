@model Shared.Models.SudokuModel

<style>
    .buttonContainer {
        display: flex;
    }

    td {
        border-right: solid 1px #808080;
        border-left: solid 1px #808080;
    }
</style>
<div class="gameContainer">
    <div class="sudokuSidebar">
        <div class="clearfix"></div>
        <div class="buttonContainer">
            <form method="post">
                @*<button class="btn btn-info m-2" type="button" value="Solve Logical" onclick="location.href='@Url.Action("SudokuSolvedLogical", "Sudoku")'">Solve Logical</button>*@
                <button asp-controller="Sudoku" asp-action="Sudoku" asp-route-id="1" class="btn btn-info m-2" >Get Logical Sudoku</button>
                <div class="clearfix"></div>
                <button class="btn btn-info m-2" type="submit" formaction="Sudoku/SolveGuessing">Solve Guessing</button>
                <div class="clearfix"></div>
                <button class="btn btn-info m-2" type="submit" formaction="Sudoku/CreateSudoku">Create Random</button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
    <div class="sudokuMainContainer" id="board">
        <table class="table table-dark rounded border">
            @for (int i = 0; i < 9; i++)
            {
<tr class="sudokuRow">
    @for (int j = 0; j < 9; j++)
    {
<td>
    @Model.Sudoku[i][j].value
</td>}
</tr>            }
        </table>
        <p></p>
    </div>
</div>